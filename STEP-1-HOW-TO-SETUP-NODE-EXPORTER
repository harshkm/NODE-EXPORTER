tar -zxvf node_exporter-1.8.2.linux-amd64.tar.gz
mv node_exporter-1.8.2.linux-amd64.tar.gz /home/harsh_mahour_ril_com/.
cd node_exporter-1.8.2.linux-amd64/
nohup ./node_exporter --web.listen-address=0.0.0.0:9500 &


sudo su 
cd /opt/
